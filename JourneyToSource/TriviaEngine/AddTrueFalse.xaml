<Window x:Class="TriviaEngine.AddTrueFalse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddTrueFalse" Height="199" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/horsehead-nebula.jpg"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="tbxQuestion" HorizontalAlignment="Left" Height="auto" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>
        <Label x:Name="lblQuestion" Content="Question" HorizontalAlignment="Left" Margin="102,9,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Button x:Name="btnTransmit" Content="Transmit" HorizontalAlignment="Left" Margin="102,137,0,0" VerticalAlignment="Top" Width="75" Click="btnTransmit_Click"/>
        <CheckBox x:Name="chkTrue" Content="True" HorizontalAlignment="Left" Margin="39,101,0,0" VerticalAlignment="Top" Checked="chkTrue_Checked" Foreground="White"/>
        <CheckBox x:Name="chkFalse" Content="False" HorizontalAlignment="Left" Margin="197,101,0,0" VerticalAlignment="Top" Checked="chkFalse_Checked" Foreground="White"/>

    </Grid>
</Window>
