<Window x:Class="TriviaEngine.MultipleChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MultipleChoiceWindow" Height="225" Width="339.448"  WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/purple-galaxy.jpg"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="tbxQuestion" HorizontalAlignment="Left" Height="auto" Margin="39,16,0,0" TextWrapping="Wrap" AcceptsReturn ="True" VerticalAlignment="Top" Width="254" IsEnabled="False"/>
        <Button x:Name="btnA" Content="" HorizontalAlignment="Left" Margin="39,136,0,0" VerticalAlignment="Top" Width="124" RenderTransformOrigin="1.633,0.398" Click="btnA_Click"/>
        <Button x:Name="btnD" Content="" HorizontalAlignment="Left" Margin="169,163,0,0" VerticalAlignment="Top" Width="124" Click="btnD_Click"/>
        <Button x:Name="btnB" Content="" HorizontalAlignment="Left" Margin="169,136,0,0" VerticalAlignment="Top" Width="124" Click="btnB_Click"/>
        <Button x:Name="btnC" Content="" HorizontalAlignment="Left" Margin="39,163,0,0" VerticalAlignment="Top" Width="124" RenderTransformOrigin="1.892,-0.003" Click="btnC_Click"/>

    </Grid>
</Window>
