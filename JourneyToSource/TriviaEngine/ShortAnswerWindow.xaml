<Window x:Class="TriviaEngine.ShortAnswerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShortAnswerWindow" Height="203" Width="382"  WindowStyle="None" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/Galaxy-background.jpg"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="tbxSAQuestion" HorizontalAlignment="Left" Height="auto" Margin="62,10,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="253" IsEnabled="False"/>
        <TextBox x:Name="tbxSAAnswer"  HorizontalAlignment="Left" Height="23" Margin="86,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>
        <Button x:Name="btnTransmit" Content="Transmit" HorizontalAlignment="Left" Margin="149,141,0,0" VerticalAlignment="Top" Width="75" Click="btnTransmit_Click"/>

    </Grid>
</Window>
