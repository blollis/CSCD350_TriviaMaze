<Window x:Class="TriviaEngine.TrueFalseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TrueFalseWindow" Height="180" Width="298" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/horsehead-nebula.jpg"/>
    </Window.Background>
    <Grid Margin="0,0,0,10">
        <TextBox x:Name="tbxTFQuestion" HorizontalAlignment="Left" Height="auto" Margin="42,22,0,0" TextWrapping="Wrap" AcceptsReturn ="True" VerticalAlignment="Top" Width="217" IsEnabled="False"/>
        <Button x:Name="btnTrue" Content="True" HorizontalAlignment="Left" Margin="33,108,0,0" VerticalAlignment="Top" Width="75" Click="btnTrue_Click"/>
        <Button x:Name="btnFalse" Content="False" HorizontalAlignment="Left" Margin="194,108,0,0" VerticalAlignment="Top" Width="75" Click="btnFalse_Click"/>

    </Grid>
</Window>
