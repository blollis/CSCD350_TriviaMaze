<Window x:Class="ShortAnswerEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="QuestionField" Content="Label" HorizontalAlignment="Left" Margin="43,38,0,0" VerticalAlignment="Top" Width="440" Height="59"/>
        <TextBox x:Name="ShortAnswer" HorizontalAlignment="Left" Height="73" Margin="43,149,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="420" RenderTransformOrigin="0.498,0.657" TextChanged="ShortAnswer_TextChanged">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.019"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="Enter" Content="Enter" HorizontalAlignment="Left" Margin="203,255,0,0" VerticalAlignment="Top" Width="75" Click="Enter_Click"/>

    </Grid>
</Window>
