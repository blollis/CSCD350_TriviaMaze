<Window x:Class="TriviaEngine.TriviaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TriviaWindow" Height="400" Width="600">
    <Grid>
        <Canvas x:Name="Question" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Width="500" Height="300">
            <Label x:Name="QuestionField" Content="Label" Canvas.Left="26" Canvas.Top="24" RenderTransformOrigin="0.161,0.29"/>
            <Button x:Name="Answer1Button" Content="Button" Canvas.Left="26" Canvas.Top="112"  Width="220" Click="Answer1Button_Click"/>
            <Button x:Name="Answer2Button" Content="Button" Canvas.Left="254" Canvas.Top="112" Width="220" Click="Answer2Button_Click"/>
            <Button x:Name="Answer3Button" Content="Button" Canvas.Left="26" Canvas.Top="183" Width="220" Click="Answer3Button_Click"/>
            <Button x:Name="Answer4Button" Content="Button" Canvas.Left="254" Canvas.Top="183" Width="220" Click="Answer4Button_Click"/>
            <Button x:Name="btnAddQuestion" Content="Add Question" Canvas.Left="10" Canvas.Top="268" Width="75" Click="btnAddQuestion_Click"/>
        </Canvas>
    </Grid>
</Window>
