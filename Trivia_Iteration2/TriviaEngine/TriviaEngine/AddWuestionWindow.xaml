        <CheckBox x:Name="chkB" Content="" HorizontalAlignment="Left" Margin="295,95,0,0" VerticalAlignment="Top" Checked="chkB_Checked"/>
        <CheckBox x:Name="chkD" Content="" HorizontalAlignment="Left" Margin="295,177,0,0" VerticalAlignment="Top" Checked="chkD_Checked"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="237,227,0,0" VerticalAlignment="Top" Width="75" Click="btnSubmit_Click"/>

    </Grid>
</Window>
