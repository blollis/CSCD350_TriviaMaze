        <TextBox x:Name="tbxD" HorizontalAlignment="Left" Height="23" Margin="317,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175"/>
        <Label Content="Question" HorizontalAlignment="Left" Margin="243,10,0,0" VerticalAlignment="Top"/>
